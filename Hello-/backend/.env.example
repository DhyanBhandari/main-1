# ========================================
# Planetary Health API - Environment Variables
# ========================================
# Copy this file to .env and fill in your values
# NEVER commit .env to git!

# ========== GOOGLE EARTH ENGINE ==========
# Required for satellite data
EE_PROJECT_ID=your-gcp-project-id
EE_SERVICE_ACCOUNT=your-service-account@project.iam.gserviceaccount.com
EE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----"

# ========== SUPABASE ==========
# Optional - for query logging and data storage
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-anon-key
SUPABASE_STORAGE_BUCKET=phi-reports

# ========== FIREBASE/FIRESTORE ==========
# Required for sensor data
# Option 1: Service account JSON file path (local development)
FIREBASE_SERVICE_ACCOUNT_PATH=/path/to/service-account.json

# Option 2: Service account JSON as string (for cloud deployment)
# FIREBASE_SERVICE_ACCOUNT_JSON={"type":"service_account","project_id":"...","private_key":"..."}

# Firebase project ID (required)
FIREBASE_PROJECT_ID=your-firebase-project-id

# ========== EXTERNAL APIS ==========
# OpenAQ API key (optional)
OPENAQ_API_KEY=your-openaq-api-key

# ========== CACHE SETTINGS ==========
# Sensor data cache TTL in seconds (default: 1800 = 30 minutes)
SENSOR_CACHE_TTL=1800

# External API cache TTL in seconds (default: 300 = 5 minutes)
EXTERNAL_API_CACHE_TTL=300

# Dashboard cache settings
DASHBOARD_REALTIME_CACHE_TTL=60
DASHBOARD_SATELLITE_CACHE_TTL=86400
DASHBOARD_POLL_INTERVAL=300

# ========== SERVER ==========
# Server port (default: 8000)
PORT=8000
